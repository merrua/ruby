# exercise 6
# source http://jaypsong.wordpress.com/

title = "In the Field Filling Up with Snow"
author = "By Seo Jeong-ju"

name1 = "It's all right"
name2 = "The snowflakes fall in heaps"

puts "#{title}"
puts "%s, %s," % [name1, name2]
puts "embracing even the sound of baby pheasants and quails returning to their nests."
puts " #{name1}, #{name1}, #{name1}, #{name2}"
puts "#{author}"

x = "There are #{10} types of people."
binary = "binary"
do_not = "don't"
y = "Those you know #{binary} and those who #{do_not}."

puts x
puts y

puts "I said: #{x}."
puts "I also said: '#{y}'."

hilarious = false
joke_evalutation = "Isn't that joke so funny?! #{hilarious}"

puts joke_evalutation

w = "This is the left side of ..."
e = "a string with a right side."

puts w + e
